import pygame as pg
import sys

# Initialize Pygame
pg.init()

# Constants
WIDTH, HEIGHT = 800, 600
screen = pg.display.set_mode((WIDTH, HEIGHT))
pg.display.set_caption("Shooting Game Environment Only")

# Colors
WHITE = (255, 255, 255)
RED = (255, 0, 0)
GREEN = (0, 255, 0)
BLACK = (0, 0, 0)

# Static player setup (white rectangle)
player_width, player_height = 50, 40
player = pg.Rect(WIDTH // 2 - player_width // 2, HEIGHT - player_height - 10, player_width, player_height)

# One static bullet (red) from top
bullet_width, bullet_height = 5, 10
bullet = pg.Rect(WIDTH // 2 - bullet_width // 2, 150, bullet_width, bullet_height)  # Mid-screen

# Few enemy blocks (green)
enemy_width, enemy_height = 50, 40
enemies = []
for i in range(5):
    x = 100 + i * 120
    y = 80
    enemy = pg.Rect(x, y, enemy_width, enemy_height)
    enemies.append(enemy)

# Clock
clock = pg.time.Clock()

# Main loop
running = True
while running:
    clock.tick(60)
    screen.fill(BLACK)

    for event in pg.event.get():
        if event.type == pg.QUIT:
            running = False

    # Draw static player
    pg.draw.rect(screen, WHITE, player)

    # Draw one bullet (optional slow falling)
    bullet.y += 1  # slow downward movement (remove if you want it fully static)
    pg.draw.rect(screen, RED, bullet)

    # Draw enemies
    for enemy in enemies:
        pg.draw.rect(screen, GREEN, enemy)

    pg.display.flip()

# Exit
pg.quit()
sys.exit()
